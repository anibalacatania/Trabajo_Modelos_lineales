issn = {00029254},
journal = {American Journal of Enology and Viticulture},
keywords = {Dissolved oxygen,Headspace oxygen,Microoxygenation,Oxygen consumption rate,Red wine},
number = {4},
pages = {465--473},
title = {{Monitoring oxygen uptake and consumption during microoxygenation treatments before and after malolactic fermentation}},
volume = {61},
year = {2010}
}
@article{Gonzalez-Sanjose2008,
