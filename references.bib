issn = {00029254},
journal = {American Journal of Enology and Viticulture},
keywords = {Copper,Hydrogen peroxide,Iron,Oxygen,Polyphenols,Sulfur dioxide},
number = {1},
pages = {53--60},
title = {{Interaction of sulfur dioxide, polyphenols, and oxygen in a wine-model system: Central role of iron and copper}},
